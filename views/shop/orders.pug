extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if orders.length <= 0
            h1 Nothing here yet!
        else 
            ul
                each order in orders 
                    li 
                        h1 #{order.id} 
                        ul 
                            each product in order.products 
                                li #{product.title} (#{product.orderItem.quantity}) 
                            